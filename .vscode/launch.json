    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate with defaults",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Generate a short password",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "args": [
                "-n",
                "3"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Generate a very short password",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "args": [
                "-n",
                "2"
            ],
            "console": "integratedTerminal"
        }
    ]
}